                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
                              input.mdc-text-field__input(
                                aria-label='Label')
                              span.mdc-notched-outline
                                span.mdc-notched-outline__leading
                                span.mdc-notched-outline__notch
                                  span.mdc-floating-label ФИО
                                span.mdc-notched-outline__trailing

                        div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
                              input.mdc-text-field__input(
                                aria-label='Label')
                              span.mdc-notched-outline
                                span.mdc-notched-outline__leading
                                span.mdc-notched-outline__notch
                                  span.mdc-floating-label Номер телефона
                                span.mdc-notched-outline__trailing

                        div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
                              input.mdc-text-field__input(
                                aria-label='Label')
                              span.mdc-notched-outline
                                span.mdc-notched-outline__leading
                                span.mdc-notched-outline__notch
                                  span.mdc-floating-label Адрес электронной почты
                                span.mdc-notched-outline__trailing

                  div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-2
                    button.btn.mdc-button.mdc-button--danger.mdc-button--full-width
                      div.mdc-button__ripple
                      +icon('close', 'mdc-button__icon btn__icon')
                      span.mdc-button__label Удалить

              div.form__grid.mdc-layout-grid
                div.form__row.mdc-layout-grid__inner
                  div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-10
                    div.form__grid.mdc-layout-grid
                      div.form__row.mdc-layout-grid__inner
                        div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
                              input.mdc-text-field__input(
                                aria-label='Label')
                              span.mdc-notched-outline
                                span.mdc-notched-outline__leading
                                span.mdc-notched-outline__notch
                                  span.mdc-floating-label ФИО
                                span.mdc-notched-outline__trailing

                        div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
                              input.mdc-text-field__input(
                                aria-label='Label')
                              span.mdc-notched-outline
                                span.mdc-notched-outline__leading
                                span.mdc-notched-outline__notch
                                  span.mdc-floating-label Номер телефона
                                span.mdc-notched-outline__trailing

                        div.form__cell.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                          div.form__group
                            label.mdc-text-field.mdc-text-field--outlined
